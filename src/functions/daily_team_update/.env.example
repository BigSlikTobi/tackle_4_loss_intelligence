# Daily Team Update Pipeline Environment Configuration

# ===== Supabase =====
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-service-role-key"
SUPABASE_SCHEMA="public"
TEAM_METADATA_TABLE="teams"
TEAM_ARTICLE_TABLE="team_article"
TEAM_ARTICLE_RELATIONSHIP_TABLE="team_article_image"
TEAM_IMAGE_TABLE="article_images"
TEAM_NEWS_FUNCTION="team-news-urls"
SUPABASE_FUNCTION_TIMEOUT=30

# ===== Downstream Service Endpoints =====
# Each endpoint must be reachable from the Cloud Function runtime.
# API keys are optional but recommended for authentication.
CONTENT_EXTRACTION_URL="https://content-extraction.example.com/run"
CONTENT_EXTRACTION_API_KEY=""
CONTENT_EXTRACTION_TIMEOUT=120

SUMMARIZATION_URL="https://summarization.example.com/run"
SUMMARIZATION_API_KEY=""
SUMMARIZATION_TIMEOUT=180

ARTICLE_GENERATION_URL="https://article-generation.example.com/run"
ARTICLE_GENERATION_API_KEY=""
ARTICLE_GENERATION_TIMEOUT=240

TRANSLATION_URL="https://translation.example.com/run"
TRANSLATION_API_KEY=""
TRANSLATION_TIMEOUT=180

IMAGE_SELECTION_URL="https://image-selection.example.com/run"
IMAGE_SELECTION_API_KEY=""
IMAGE_SELECTION_TIMEOUT=120

# Optional: add custom headers by prefixing with <SERVICE>_HEADER_
# e.g. IMAGE_SELECTION_HEADER_X_SUPABASE_TOKEN="xyz"

SERVICE_MAX_PARALLEL_REQUESTS=4

# ===== Pipeline Behaviour =====
PIPELINE_PARALLEL=false
PIPELINE_MAX_WORKERS=4
PIPELINE_CONTINUE_ON_ERROR=true
PIPELINE_DRY_RUN=false
PIPELINE_IMAGE_COUNT=2
PIPELINE_MAX_URLS_PER_TEAM=10
PIPELINE_ALLOW_EMPTY_URLS=false
PIPELINE_SUMMARIZATION_BATCH_SIZE=5

# ===== Logging =====
LOG_LEVEL=INFO
