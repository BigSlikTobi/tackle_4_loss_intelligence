# Required: Supabase credentials (shared with all modules)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Optional: OpenAI API key for entity/topic extraction
OPENAI_API_KEY=sk-your-openai-api-key

# Optional: Knowledge extraction parameters
ENTITY_CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for entity matches (0.0-1.0)
TOPIC_CONFIDENCE_THRESHOLD=0.6   # Minimum confidence for topic extraction (0.0-1.0)
MAX_TOPICS_PER_GROUP=10          # Maximum number of topics to extract per story group
MAX_ENTITIES_PER_GROUP=20        # Maximum number of entities to extract per story group

# Optional: Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
