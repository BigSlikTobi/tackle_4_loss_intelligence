# Story Grouping Configuration
# Add these variables to your central .env file at project root

# =============================================================================
# Required Configuration
# =============================================================================

# Supabase credentials (required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# =============================================================================
# Optional Configuration
# =============================================================================

# Similarity threshold for grouping stories (0.0-1.0)
# Higher values = stricter grouping (more, smaller groups)
# Lower values = looser grouping (fewer, larger groups)
# Default: 0.8 (recommended)
SIMILARITY_THRESHOLD=0.8

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
LOG_LEVEL=INFO
